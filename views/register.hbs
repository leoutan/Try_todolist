<div class="container" style="max-width: 600px;">
  <form action="/register" method="post">
    <div class="card">
      <div class="card-header">Register page</div>
      <div class="card-body">
        <div class="row form-group mb-2">
          <label for="name" class="col-sm-4 col-form-label">名稱</label>
          <input type="text" class="col-sm-8" name="name" id="name">
        </div>

        <div class="row form-group mb-2">
          <label for="email" class="col-sm-4 col-form-label">email</label>
          <input type="text" class="col-sm-8" name="email" id="email">
        </div>

        <div class="row form-group mb-2">
          <label for="password" class="col-sm-4 col-form-label">password</label>
          <input type="text" class="col-sm-8" name="password" id="password">
        </div>

        <div class="row form-group mb-2">
          <label for="confirmPassword" class="col-sm-4 col-form-label">confirm password</label>
          <input type="text" class="col-sm-8" name="confirmPassword" id="confirmPassword">
        </div>
      </div>
      <div class="card-footer">
        <button type="submit">註冊</button>
        {{>message}}
        <div style="mt-2">
          <span>has an account ?</span>
          <a href="/login"><i>login</i></a>
        </div>
      </div>
    </div>
  </form>
</div>